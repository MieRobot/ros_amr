<?xml version="1.0"?>

<launch>

    <arg name="camera" default="camera" />

    <!-- start sensor-->
    <include file="$(find openni_launch)/launch/openni.launch">
        <arg name="camera" default="$(arg camera)"/>
    </include>

    <!-- run odom and tf_broadcaster -->
    <node pkg="$(find mobile_robot)/mobile_robot_odom" type="odom_mobile_robot" name="odom" />
   
    <node pkg="$(find mobile_robot)/mobile_robot_setup_tf" type="tf_robot" name="tf_robot" />

    <node pkg="rosserial_python" type="serial_node.py" name="rosserial" output="screen">
        <param name="port" value="/dev/arduino" />
        <param name="baud" value="57600" />
    </node>
    



</launch>

